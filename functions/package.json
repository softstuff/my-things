{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec",
    "test:ci-test": "firebase emulators:exec --only firestore \"npm run test\""
  },
  "engines": {
    "node": "12"
  },
  "main": "index.js",
  "dependencies": {
    "atlassian-connect-auth": "^1.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "short-uuid": "^4.1.0"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.3",
    "mocha": "^8.2.1",
    "mocha-logger": "^1.0.7"
  },
  "private": true
}
